// promedio con repetir.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>


int main()
{
    #include "stdafx.h"
#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    float n,s,c,dato,prom;
    cout<< "ingrese la cantidad de datos";
    cin>> n;
    s=0;  //acumulador
    c=0;  //contador
    while (c<n)
    {
        cout<< "ingrese datos";
        cin>> dato;
        s= s+dato;
        c= c+1;
    }
    prom= s/n;
    cout<< "escribir promedio: "<<prom;
    getch();

    return 0;
}
